{
	"compilerOptions": {
		"lib": ["ES2023"],
		"module": "node16",
		"target": "ES2022",
		"rootDir": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "./tsup.config.ts", "./test.ts"],
	"exclude": ["node_modules"]
}
