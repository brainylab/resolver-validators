{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"rootDir": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["vitest"]
	},
	"include": ["src/**/*", "./tsup.config.ts"],
	"exclude": ["node_modules"]
}
